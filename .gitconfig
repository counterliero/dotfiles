[user]
  email = matthias@splieth.com
  name = Matthias Splieth

[color]
  branch = auto
  diff = auto
  status = auto

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[push]
  default = upstream

[pull]
  default = current

[diff]
  memonicprefix = true

[alias]
  lol = !git commit -m \"$(curl -s whatthecommit.com/index.txt)\"
  yolo = !git commit -am \"DEAL WITH IT\" && git push -f origin master
  co = checkout
  undo = reset HEAD~1 --mixed

[core]
  excludesfile = ~/.gitignore

[credential]
  UseHttpPath = true
